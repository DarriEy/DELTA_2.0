{
  "name": "delta-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Integrated Hydrological Intelligence Monorepo",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "backend:dev": "cd backend && uvicorn api.main:app --reload",
    "backend:test": "cd backend && pytest",
    "test:all": "npm run backend:test && npm run frontend:test",
    "deploy:frontend": "cd frontend && npm run build && npm run deploy",
    "deploy:backend": "./deploy_backend.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
